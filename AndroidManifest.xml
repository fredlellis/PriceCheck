<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.lellis.pricecheck"
          android:versionCode="3"
          android:versionName="1.1">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="10" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application android:label="@string/app_name"
                 android:icon="@drawable/icon">
        <activity android:name=".activity.InitActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name"
                  android:icon="@drawable/icon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.NovaCompraActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/tituloNovaCompra"/>
        <activity android:name=".activity.ItemDetailAcivity"
                  android:screenOrientation="portrait"
                  android:label="@string/detalhe"/>
        <activity android:name=".activity.CameraTestActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/qrCodeScan"/>
    </application>
</manifest> 
